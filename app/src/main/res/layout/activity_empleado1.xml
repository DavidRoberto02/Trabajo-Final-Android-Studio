<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layoutDescription="@xml/activity_empleado1_scene"
    tools:context=".Empleado1">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="145dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:text="Domingo:"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="145dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:text="Sabado:"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/J"
                android:layout_width="145dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:text="Jueves:"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/M" />

            <TextView
                android:id="@+id/M"
                android:layout_width="145dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:text="Martes:"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/L" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Empleado 1"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dias"
                android:layout_width="216dp"
                android:layout_height="54dp"
                android:layout_marginTop="24dp"
                android:text="Dias de trabajo"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="173dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="Ventas realizadas"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/dias"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/L"
                android:layout_width="145dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:text="Lunes:"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dias" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="145dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:text="Viernes:"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/J" />

            <Button
                android:id="@+id/igual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:background="#4CAF50"
                android:text="="
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <EditText
                android:id="@+id/dia0"
                android:layout_width="124dp"
                android:layout_height="46dp"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="28dp"
                android:background="#4CAF50"
                android:ems="10"
                android:inputType="number"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/L"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/dia1"
                android:layout_width="124dp"
                android:layout_height="46dp"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="28dp"
                android:background="#4CAF50"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/M"
                app:layout_constraintTop_toBottomOf="@+id/dia0" />

            <EditText
                android:id="@+id/dia2"
                android:layout_width="124dp"
                android:layout_height="46dp"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="28dp"
                android:background="#4CAF50"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/J"
                app:layout_constraintTop_toBottomOf="@+id/dia1" />

            <EditText
                android:id="@+id/dia3"
                android:layout_width="126dp"
                android:layout_height="46dp"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="24dp"
                android:background="#4CAF50"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/dia2" />

            <EditText
                android:id="@+id/dia4"
                android:layout_width="124dp"
                android:layout_height="46dp"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="28dp"
                android:background="#4CAF50"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/dia3" />

            <EditText
                android:id="@+id/dia5"
                android:layout_width="124dp"
                android:layout_height="46dp"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="24dp"
                android:background="#4CAF50"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/dia4" />

            <TextView
                android:id="@+id/resultado"
                android:layout_width="146dp"
                android:layout_height="39dp"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toEndOf="@+id/igual"
                app:layout_constraintTop_toBottomOf="@+id/dia5" />

            <Button
                android:id="@+id/navegar"
                android:layout_width="191dp"
                android:layout_height="62dp"
                android:layout_marginTop="592dp"
                android:background="#8BC34A"
                android:text="Empleado 2"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@+id/resultado"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/igual"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="semana del mes"
                android:textColorHint="#000000"
                android:inputType="datetime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.973"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/mostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="44dp"
                android:background="#8BC34A"
                android:onClick="registro"
                android:text="Mostrar"
                app:layout_constraintStart_toEndOf="@+id/Guardar"
                app:layout_constraintTop_toBottomOf="@+id/navegar" />

            <Button
                android:id="@+id/Guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="44dp"
                android:background="#8BC34A"
                android:onClick="guardar"
                android:text="Guardar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navegar" />


        </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>